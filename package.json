    "@playwright/test": "^1.52.0",
    "@replit/object-storage": "^1.0.0",
    "@sentry/browser": "^9.15.0",
    "@sentry/node": "^9.13.0",
    "@tanstack/react-query": "^5.76.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "dompurify": "^3.2.5",
    "express": "^4.18.2",
    "jsdom": "^26.1.0",
    "mcp": "^1.4.2",
    "npm": "^11.4.0",
    "openai": "^4.100.0",

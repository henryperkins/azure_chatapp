  "name": "azure_chatapp",
  "version": "1.0.0",
  "description": "Azure OpenAI Chat Application",
  "scripts": {
    "build:css": "node_modules/.bin/tailwindcss -i ./static/css/tailwind.css -o ./static/css/dist/tailwind.css --minify",
    "watch:css": "npx tailwindcss -i ./static/css/tailwind.css -o ./static/css/dist/tailwind.css --watch",

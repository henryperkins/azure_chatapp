# Sample .env file for Azure Chat Application
# Copy this file to .env and fill in your credentials

# Application Version
APP_VERSION=1.0.0

# Environment (development, testing, production)
ENV=development

# Sentry.io Integration
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENABLED=false

# Session
SESSION_SECRET=your_session_secret_here

# JWT Authentication
JWT_SECRET=your_jwt_secret_here
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Database
# Option 1: Full connection URL (overrides separate PG* variables)
# DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/azure_chat_db?sslmode=require
# Option 2: Separate PG* environment variables (preferred for Azure Postgres)
# PGHOST=your-db-server.postgres.database.azure.com
# PGPORT=5432
# PGDATABASE=azure_chat_db
# PGUSER=your_username@your-db-server
# PGPASSWORD=your_password
# PGSSLMODE=require
# PG_SSL_ALLOW_SELF_SIGNED=False
# PG_SSL_ROOT_CERT=/path/to/ca_bundle.pem  # optional

# Azure OpenAI (if using Azure OpenAI)
AZURE_OPENAI_API_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=your_azure_openai_endpoint_here

# OpenAI (if using OpenAI directly)
OPENAI_API_KEY=your_openai_key_here

# Claude API (required for Claude-3-7-Sonnet)
CLAUDE_API_KEY=your_claude_api_key_here

# CORS settings
CORS_ORIGINS=http://localhost:8000,http://127.0.0.1:8000


# Cookie settings
COOKIE_DOMAIN=localhost

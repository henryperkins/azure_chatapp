# Sample .env file for Azure Chat Application
# Copy this file to .env and fill in your credentials

# Environment (development, testing, production)
ENV=development

# Session
SESSION_SECRET=your_session_secret_here

# JWT Authentication
JWT_SECRET=your_jwt_secret_here
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/azure_chat_db

# Azure OpenAI (if using Azure OpenAI)
AZURE_OPENAI_API_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=your_azure_openai_endpoint_here

# OpenAI (if using OpenAI directly)
OPENAI_API_KEY=your_openai_key_here

# Claude API (required for Claude-3-7-Sonnet)
CLAUDE_API_KEY=your_claude_api_key_here

# CORS settings
CORS_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# WebSocket backend configuration
VITE_BACKEND_HOST=put.photo

# Cookie settings
COOKIE_DOMAIN=localhost
